<div id="site-container"><!-- FAO header container -->
    <div class="container fao-header">
        <div class="row faostat-menu-boot">

            <!--TODO move style to css -->
            <div class="col-lg-12" style='padding-left: 0px; padding-right: 0px;'>
                <div id="fs-head" class="fs-head">
                    <div class="fs-logo-holder">
                        <div class="fs-logo img-responsive"></div>
                    </div>
                    <div class="fs-united hidden-xs hidden-md hidden-sm">

                        <!--TODO move style to css -->
                        <p id="fs-fao" class="truncate" style="padding-top: 1px;">
                            {{fao}}
                        </p>

                        <!--TODO move style to css -->
                        <p class="fs-bold fs-statistics-division truncate" style="padding-top: 1px;">
                            {{statistics_division}}
                        </p>
                    </div>
                    <div class="fs-languages hidden-xs hidden-md hidden-sm">
                        <a data-locale="en">ENGLISH</a>
                        <span> | </span>
                        <a data-locale="fr">FRANÇAIS</a>
                        <span> | </span>
                        <a data-locale="es">ESPAÑOL</a>
                    </div>
                    <div class="fs-languages hidden-lg">
                        <a data-locale="en">EN</a>
                        <span>|</span>
                        <a data-locale="fr">FR</a>
                        <span>|</span>
                        <a data-locale="es">ES</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top menu container -->
    <!--<div class="container topmenu"></div>-->
    <div class='container fao-header' id='faostat_ui_menu'></div>

    <!-- Breadcrumb container -->
    <div class="container">
        <!--TODO: Probably remove the <br>-->
        <br>
        <div class="row">
            <div class="col-xs-12">
                <div id="breadcrumb-container"></div>
            </div>
        </div>
    </div>

    <!-- Main Container -->
    <div class="container" id="main-container"></div>

    <!-- Page Footer -->
    <footer class="container fao-footer">
        <div>
            <div class='row'>
                <div class='col-lg-12'>
                    <a class='pull-right'>© FAO 2015</a>
                </div>
            </div>
            <div class='row'>
                <div class='col-lg-12'>
                    <a id='territorial-notes' class='pull-right'>{{territorial_notes}}</a>
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-lg-12'>
                <a id='feedback-system' class='pull-right'>{{feedback_system}}</a>
            </div>
        </div>
    </footer>

</div>

<!-- Scrooling -->
