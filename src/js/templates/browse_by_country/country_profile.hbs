<template id="country-list-modal">

    <!-- Modal -->
    <div class="modal left fade " id="fs-country-indicators-list-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">

            <div class="modal-content">
                <div class="modal-header" style="background-color:white; padding-top:0px;padding-bottom:8px;" >
                    <div class="row clearfix">
                        <div class="col-md-12">
                            <h3 class="pull-left"><b>FAO</b>STAT <small>Country List</small></h3>
                            <button style="padding-top:23px;" type="button" class="close pull-right" data-dismiss="modal" aria-label="Close">
                                <i class="material-icons">close</i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="modal-body">

                    <!--<input class='form-control' placeholder='{{filter_domain_tree}}' id='fs-download-tree-search'>-->

                    <div class="row">
                        <div class="col-md-12" data-role="country-list"></div>
                    </div>
                    <!--<ul data-role="country-list" class="list-unstyled fs-download-options"></ul>-->

                    <br>
                    <br>

                    <div class="row">
                        <div class="col-md-12">
                            <a type="button" class="btn btn-primary pull-right waves-effect" aria-label="Apply Changes"
                               data-role='country-list-apply-changes'>
                                <i class="material-icons left">done</i>
                                <span class="hidden-xs">Apply changes</span>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</template>


<template id="country-list-modal-content">

    {{#if this.checked}}checked{{/if}}

    {{#each data}}
        <li>
            <input type="checkbox" data-code="{{this.code}}" id="country-list-check-box-{{this.code}}">
            <label for="country-list-check-box-{{this.code}}">{{this.label}}</label>
        </li>
    {{/each}}

</template>