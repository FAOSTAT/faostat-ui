<h2>{{classsification_title}}</h2>
<hr>


<div id="fs-classifications-table">

    <div class="row">
        <div class="col-lg-3">
            <input type="text" class="form-control search" placeholder="{{filter_results}}" aria-describedby="basic-addon1">
        </div>
        <div class="col-lg-3">
            <button class="btn btn-default sort" data-sort="fs-mes-label" type="button">{{sort_by_title}}</button>
        </div>
    </div>

    <br><br>

    <table class='table table-striped table-bordered table-responsive table-hover table-condensed'>
        <thead>
        <tr>
            <th>
                {{code_title}}
            </th>
            <th>
                {{label_title}}
            </th>
            <th>
                {{description_title}}
            </th>
        </tr>
        </thead>
        <tbody class="list">
        {{#each rows}}
            <tr>
                {{#if this.code}}
                    <td class="fs-mes-code">
                        {{{this.code}}}
                    </td>
                {{/if}}
                {{#if this.label}}
                    <td class="fs-mes-label">
                        {{{this.label}}}
                    </td>
                {{/if}}
                {{#if this.description}}
                    <td class="fs-mes-description">
                        {{{this.description}}}
                    </td>
                {{/if}}
            </tr>
        {{/each}}
        </tbody>
    </table>

</div>