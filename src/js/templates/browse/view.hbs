<div class="row">
    <div class="col-xs-12">
        {{#if comment}}
            <span class="fa-stack fa-lg">
                  <i class="fa fa-circle-o fa-stack-2x"></i>
                  <i class="fa fa fa-info fa-stack-1x"></i>
                </span>
            {{#if comment.url}}
                <a href="{{comment.url}}" target="_blank">{{comment.text}}</a>
            {{else}}
                <p>{{comment.text}}</p>
            {{/if}}
        {{/if}}
        <div class="row" data-role="filter-box"></div>
        <br>
        <div class="row" data-role='dashboard'></div>
    </div>
</div>