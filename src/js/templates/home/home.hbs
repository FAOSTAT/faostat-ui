                    <i class="fa fa-line-chart"></i> <a href="#{{URL_BROWSE_BY_COUNTRY}}">{{country_profiles}}</a>
                </div>
                <div id="fs_home_rankings">
                    <i class="fa fa-line-chart"></i> <a href="#{{URL_BROWSE_RANKINGS}}">{{rankings}}</a>
                </div>
            </div>

            <hr>
            <div>
                <h4>{{whats_new}}</h4>
                <div id="fs_home_whats_new"></div>
            </div>

            <hr>
            <div>
                <h4>{{coming_up}}</h4>
                <div id="fs_home_coming_up"></div>
            </div>
            <hr>

            <div>
                <h4>{{follow_faostatistics}}</h4>
                <a id="fs_home_twitter" class="twitter-timeline" data-chrome="" height="350" href="https://twitter.com/FAOstatistics" data-widget-id="700247798168551424">Tweets by @FAOstatistics</a>
                <script>

                    // TODO: check if is it useful the timeout
                    setTimeout(function() {
                        !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
                    },2000);

                </script>
            </div>

        </div>
