{
   "$schema": "http://json-schema.org/draft-04/schema#",
   "type": "object",
   "title": "FAOSTAT",
   "description": "FAOSTAT",
   "definitions": {
      "lang": {
         "type": "string",
         "default": "en",
         "enum": ["en", "fr", "es", "ar", "cn", "ru"]
      },
      "lang_faostat": {
         "type": "string",
         "default": "E",
         "enum": ["E", "F", "S", "A", "C", "R"]
      },
      "bulk_downloads_root": {
         "type": "string",
         "format": "url",
         "default": "http://faostat.fao.org/Portals/_Faostat/Downloads/zip_files/"
      },
      "url_wds_bulk_downloads": {
         "type": "string",
         "format": "url",
         "default": "http://faostat3.fao.org/wds/rest/bulkdownloads"
      },
      "url_wds_table": {
         "type": "string",
         "format": "url",
         "default": "http://faostat3.fao.org/wds/rest/table/json"
      },
      "url_mdsd": {
         "type": "string",
         "format": "url",
         "default": "http://faostat3.fao.org/d3s2/v2/mdsd"
      },
      "url_d3s": {
         "type": "string",
         "format": "url",
         "default": "http://faostat3.fao.org/d3s2/v2/msd/resources/metadata/uid"
      },
      "url_codelists": {
         "type": "string",
         "format": "url",
         "default": "http://faostat3.fao.org/wds/"
      },
      "url_listboxes": {
         "type": "string",
         "format": "url",
         "default": "http://faostat3.fao.org/wds/rest/procedures/listboxes"
      },
      "datasource": {
         "type": "string",
         "default": "faostatdb",
         "enum": [
            "faostat",
            "faostatdb",
            "faostatglbl",
            "faostatprod",
            "faostatproddiss"
         ]
      }
   },
   "properties": {
      "download": {
         "type": "object",
         "title": "Download Section",
         "properties": {
            "metadata": {
               "type": "object",
               "properties": {
                  "url_wds_table": {
                     "$ref": "#/definitions/url_wds_table"
                  },
                  "url_mdsd": {
                     "$ref": "#/definitions/url_mdsd"
                  },
                  "url_d3s": {
                     "$ref": "#/definitions/url_d3s"
                  }
               }
            },
            "preview_options": {
               "type": "object",
               "title": "Preview Options",
               "properties": {
                  "excel_button": {
                     "type": "boolean",
                     "default": false
                  },
                  "pdf_button": {
                     "type": "boolean",
                     "default": false
                  },
                  "ok_button": {
                     "type": "boolean",
                     "default": false
                  },
                  "csv_button": {
                     "type": "boolean",
                     "default": false
                  }
               }
            },
            "selector_manager": {
               "type": "object",
               "properties": {
                  "url_codelists": {
                     "$ref": "#/definitions/url_codelists"
                  },
                  "url_listboxes": {
                     "$ref": "#/definitions/url_listboxes"
                  }
               }
            }
         }
      }
   }
}